{% extends "base.html.twig" %}

{% block content %}

    <h1>Schlagwörter hinzufügen</h1>

    {{ form_start(addHeadwordForm) }}
    <br>
    {{ form_widget(addHeadwordForm.headwordName, {attr: { placeholder: "Schlagwort hinzufügen"}}) }}

    <br>
    <a class="btn btn-secondary" role="button" href="{{ path('home') }}">Änderungen VERWERFEN</a>
    {{ form_label(addHeadwordForm.submit) }}
    {{ form_widget(addHeadwordForm.submit, {attr: {class:"btn btn-success"}}) }}

    {{ form_end(addHeadwordForm) }}

    <br> <br>
    <h3>Bereits existierende Schlagwörter:</h3>
    <ul class="list-group list-group-horizontal">
        {% for every_headword in headwords %}
            <li class="list-group-item">{{ every_headword.headwordName }}</li>
        {% endfor %}
    </ul>

{% endblock %}