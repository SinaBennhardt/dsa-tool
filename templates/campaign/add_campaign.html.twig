{% extends "base_layout.html.twig" %}

{% block main %}

    <h1>Neue Kampagne</h1>

    {{ form_start(CampaignForm) }}

    <div class="form-group">
        <h2>{{ form_label(CampaignForm.title) }} </h2>
        {{ form_widget(CampaignForm.title, {attr:{size:"90%"}}) }}
