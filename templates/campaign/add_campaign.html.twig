        {{ form_errors(CampaignForm.blurb) }}
    </div>

    <div>
    <a class="btn btn-secondary" role="button" href="{{ path('campaigns') }}">Ã„nderungen VERWERFEN</a>
    {{ form_label(CampaignForm.submit) }}
