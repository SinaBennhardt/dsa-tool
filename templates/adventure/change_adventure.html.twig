{% extends "campaign_layout.html.twig" %}

{% block content %}

    {{ form_start(changeAdventureForm) }}

    <h1>Abenteuer: {{ title }}</h1>

    <div class="form-group">
        <h2>{{ form_label(changeAdventureForm.title) }}</h2>
        {{ form_widget(changeAdventureForm.title, {attr:{size:"90%"}}) }}
        {{ form_errors(changeAdventureForm.title) }}
    </div>

    <div class="form-group">
        <h2>{{ form_label(changeAdventureForm.blurb) }}</h2>
        {{ form_widget(changeAdventureForm.blurb, {attr:{rows:"10", cols:"90%",
            placeholder: "Schreibe hier deine Zusammenfassung hin"}}) }}
        {{ form_errors(changeAdventureForm.blurb) }}
    </div>

    <a class="btn btn-secondary" role="button" href="{{ path('change_campaign',
        {campaignId: campaignId}) }}">Ã„nderungen VERWERFEN</a>
    {{ form_label(changeAdventureForm.submit) }}
    {{ form_widget(changeAdventureForm.submit, {attr:{class:"btn btn-success"}}) }}

    {{ form_end(changeAdventureForm) }}


{% endblock content %}