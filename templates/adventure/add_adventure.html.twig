        {{ form_errors(AdventureForm.blurb) }}
    </div>

    <a class="btn btn-secondary" role="button"
       href="{{ path('change_campaign', {campaignId: campaignId}) }}">Ã„nderungen VERWERFEN</a>
    {{ form_label(AdventureForm.submit) }}
